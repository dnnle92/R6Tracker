            border: #ccc 2px solid;
            color: #ccc;
        }

    .platform-avatar {
        width: 40px;
        margin-right: 0.7rem;
    }

    img {
        width: 100%;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
